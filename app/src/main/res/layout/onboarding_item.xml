<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@drawable/bg_gradient">

    <!-- Full-width top image (slightly reduced height) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@drawable/top_image_background"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/onboardingImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <!-- Transparent gradient strip for text visibility -->
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/top_overlay_gradient"
            android:layout_gravity="top" />

        <!-- App name overlay -->
        <TextView
            android:id="@+id/appNameOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FʅყYαƚɾα"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_margin="16dp"
            android:layout_gravity="top|center_horizontal"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />
    </FrameLayout>

    <!-- Bottom: Title + Description + Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/onboardingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#F6F6F8"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/onboardingDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#DDDFF2"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Bigger, full-width button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/onboardingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Location Services"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:paddingVertical="14dp"
            app:backgroundTint="#FF512F"/>

        <TextView
            android:id="@+id/skipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Skip"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</LinearLayout>