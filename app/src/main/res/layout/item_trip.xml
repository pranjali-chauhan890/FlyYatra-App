<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ✅ Top Row: Airline Logo + Name + Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgAirlineLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_flight"
                android:contentDescription="Airline Logo"
                android:padding="6dp" />

            <TextView
                android:id="@+id/tvAirline"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="IndiGo"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingStart="10dp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textSize="14sp"
                android:padding="6dp"
                android:background="@drawable/status_badge_confirmed"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- ✅ Flight Info -->
        <TextView
            android:id="@+id/tvFlightInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6E-204 • Delhi → Mumbai"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <!-- ✅ Date & Time -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/08/2025 • 08:40 AM"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#555"/>

        <!-- ✅ Price -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹4,599"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="#000"/>

        <!-- ✅ Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnDetails"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:backgroundTint="#2196F3"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginStart="8dp"
                android:backgroundTint="#F44336"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>