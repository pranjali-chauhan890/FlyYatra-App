<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F4F6"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Ticket Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ticket"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="4dp">

            <!-- Airline + Flight Number -->
            <TextView
                android:id="@+id/tvAirline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FlyYatra - AI101"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#0D47A1" />

            <!-- Route -->
            <TextView
                android:id="@+id/tvRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mumbai â†’ Delhi"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="#444" />

            <!-- Date -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Aug 2025"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="#444" />

            <!-- Passenger Name -->
            <TextView
                android:id="@+id/tvPassenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passenger: John Doe"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#222" />

            <!-- Status -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Confirmed"
                android:textSize="16sp"
                android:textColor="#388E3C"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Cancel Booking Button -->
        <Button
            android:id="@+id/btnCancelBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Booking"
            android:layout_marginTop="20dp"
            app:backgroundTint="#D32F2F"
            android:textColor="@android:color/white"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>