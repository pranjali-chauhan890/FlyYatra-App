<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_gradient_payment">

    <!-- Title -->
    <TextView
        android:id="@+id/tvPaymentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Payment"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:paddingBottom="24dp" />

    <!-- Card Holder Name -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="14dp"
        android:hint="Card Holder Name"
        android:padding="14dp"
        android:background="@drawable/input_bg"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_user_scaled"
        android:drawablePadding="12dp" />

    <!-- Card Number -->
    <EditText
        android:id="@+id/etCardNumber"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="14dp"
        android:hint="Card Number"
        android:inputType="number"
        android:padding="14dp"
        android:background="@drawable/input_bg"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_card_scaled"
        android:drawablePadding="12dp" />

    <!-- Expiry & CVV in a row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="14dp">

        <EditText
            android:id="@+id/etExpiry"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:hint="MM/YY"
            android:padding="14dp"
            android:background="@drawable/input_bg"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_calender_scaled"
            android:drawablePadding="12dp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/etCVV"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:hint="CVV"
            android:inputType="numberPassword"
            android:padding="14dp"
            android:background="@drawable/input_bg"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_lock_scaled"
            android:drawablePadding="12dp" />
    </LinearLayout>

    <!-- Pay Button -->
    <Button
        android:id="@+id/btnPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Now"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="14dp"
        android:layout_marginBottom="12dp"
        android:elevation="4dp" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@drawable/bg_button_outline"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:padding="14dp"
        android:elevation="2dp" />

</LinearLayout>
