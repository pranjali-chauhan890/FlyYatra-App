<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flight Status"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Search Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/etFlightNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Flight Number (optional)"
                    android:background="@drawable/input_bg"
                    android:padding="12dp"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/etFromCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="From (City)"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_bg"
                    android:padding="12dp"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/etToCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="To (City)"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_bg"
                    android:padding="12dp"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Date"
                    android:layout_marginTop="8dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/input_bg"
                    android:padding="12dp"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btnSearchStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Check Status"
                    android:textColor="#FFF"
                    android:backgroundTint="@color/flight_btn"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Results -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFlightStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>