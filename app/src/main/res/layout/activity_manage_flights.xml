<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_signup"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Flights"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <!-- Search + Sort Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/etSearchFlights"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search flights"
            android:padding="10dp"
            android:background="@drawable/input_bg"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <ImageButton
            android:id="@+id/btnSortFlights"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_sort"
            android:contentDescription="Sort Flights"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Total Flights Text -->
    <TextView
        android:id="@+id/tvTotalFlights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Flights: 0"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Add Flight Button -->
    <Button
        android:id="@+id/btnAddFlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Flight"
        android:textColor="#FFFFFF"
        app:backgroundTint="#03A9F4"
        android:layout_marginBottom="12dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFlights"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

</LinearLayout>